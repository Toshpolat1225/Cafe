{{#if foods.length}}
<div class="row">
  {{#each foods}}
  <div class="col-sm-3" style="margin: 20px;">
    <div class="card" style="width: 18rem;">
      <img src="/images/{{img}}" class="card-img-top" alt="{{name}}" />
      <div class="card-body">
        <h5 class="card-title"><a href="/admin/foods/{{_id}}">{{name}}</a></h5> <br>
        <hr>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{price}}</li>
      </ul>
      <div class="card-body d-flex justify-content-between">
        <a href="/admin/foods/edit/{{_id}}" class="card-link">Edit</a>
        <a href="/admin/foods/delete/{{_id}}" class="card-link">Delete</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h2>Foods is empty</h2>
{{/if}}