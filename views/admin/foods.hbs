      <ul
        class="nav nav-pills nav-sidebar flex-column"
        data-widget="treeview"
        role="menu"
        data-accordion="false"
      >
        <li class="nav-item">
          <a href="#" class="nav-link">
            <i class="nav-icon fas fa-table"></i>
            <p>
              foods
            </p>
          </a>
          <ul class="nav nav-treeview">
            <li class="nav-item">
              <a href="/admin/foods" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>New</p>
              </a>
            </li>
            <li class="nav-item">
              <a href="/admin/marks/topFoods" class="nav-link">
                <i class="far fa-circle nav-icon"></i>
                <p>Expensive</p>
              </a>
            </li>
          </ul>
        </li>

      </ul>
    </nav></div>

{{#if foods.length}}
<div class="row">
  {{#each foods}}
  <div class="col-sm-3" style="margin: 20px;">
    <div class="card" style="width: 18rem;">
      <img src="/images/{{img}}" class="card-img-top" alt="{{name}}" />
      <div class="card-body">
        <h5 class="card-title"><a href="/admin/foods/{{_id}}">{{name}}</a></h5><br>
        <hr>
      </div>
      <ul class="list-group list-group-flush">
        <li class="list-group-item">{{price}}</li>
      </ul>
      <div class="card-body d-flex justify-content-between">
        <form action="/card/add" method="POST">
        <input type="hidden" name="id" value="{{_id}}">
        <button type="submit" class="btn btn-primary">Buy</button>
        </form>
        <a href="/admin/foods/edit/{{id}}" class="card-link">Edit</a>
        <a href="/admin/foods/delete/{{id}}" class="card-link">Delete</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h2>foods is empty</h2>
{{/if}}