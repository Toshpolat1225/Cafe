{{#if categories.length}}
<div class="row">
  {{#each categories}}
  <div class="col-sm-3" style="margin: 20px;">
    <div class="card" style="width: 18rem;">
      <img src="/images/{{img}}" class="card-img-top" alt="{{name}}" />
      <div class="card-body">
        <h5 class="card-title"><a href="/admin/categorys/{{_id}}">{{name}}</a></h5>
      </div>
      <div class="card-body d-flex justify-content-between">
        <a href="/admin/categorys/edit/{{_id}}" class="card-link">Edit</a>
        <a href="/admin/categorys/delete/{{_id}}" class="card-link">Delete</a>
      </div>
    </div>
  </div>
  {{/each}}
</div>
{{else}}
<h2>Categorys is empty</h2>
{{/if}}